<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="7dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false">


<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="95dp"
        android:layout_height="115dp"
        android:id="@+id/imageView_familyAdapter_picture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Familia Lagos Osorio"
        android:id="@+id/textView_familyAdapter_name"
        android:layout_alignTop="@+id/imageView_familyAdapter_picture"
        android:layout_toRightOf="@+id/imageView_familyAdapter_picture"
        android:layout_toEndOf="@+id/imageView_familyAdapter_picture"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textColor="#0096a6"
        android:textStyle="bold"
        android:lines="2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calle 9 # 11 - 3"
        android:id="@+id/textView_familyAdapter_address"
        android:textColor="#000000"
        android:layout_below="@+id/textView_familyAdapter_name"
        android:layout_alignLeft="@+id/textView_familyAdapter_name"
        android:layout_alignStart="@+id/textView_familyAdapter_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Landazuri (Santander)"
        android:id="@+id/textView_familyAdapter_location"
        android:textColor="#000000"
        android:layout_below="@+id/textView_familyAdapter_address"
        android:layout_alignLeft="@+id/textView_familyAdapter_address"
        android:layout_alignStart="@+id/textView_familyAdapter_address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25/05/17 03:43:11 pm"
        android:id="@+id/textView_familyAdapter_modifyDate"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:layout_below="@+id/textView_familyAdapter_location"
        android:layout_alignLeft="@+id/textView_familyAdapter_location"
        android:layout_alignStart="@+id/textView_familyAdapter_location" />
</RelativeLayout>

</android.support.v7.widget.CardView>