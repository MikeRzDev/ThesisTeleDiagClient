<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView_adapterPerson_picture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/person_placeholder"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jacinto Lagos Lopez"
        android:id="@+id/textView_adapterPerson_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_adapterPerson_picture"
        android:layout_toEndOf="@+id/imageView_adapterPerson_picture"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:lines="2"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jefe de Hogar"
        android:id="@+id/textView_adapterPerson_relationship"
        android:layout_below="@+id/textView_adapterPerson_name"
        android:layout_toRightOf="@+id/imageView_adapterPerson_picture"
        android:layout_toEndOf="@+id/imageView_adapterPerson_picture"
        android:textColor="#000000"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="C.Cronica"
        android:id="@+id/textView_adapterPerson_cronicCondition"
        android:textSize="15sp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:background="#F9A825"
        android:layout_below="@+id/textView_adapterPerson_specialCondition"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="C.Especial"
        android:id="@+id/textView_adapterPerson_specialCondition"
        android:layout_alignTop="@+id/textView_adapterPerson_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:background="#1565C0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32 aÃ±os"
        android:id="@+id/textView_adapterPerson_age"
        android:layout_below="@+id/textView_adapterPerson_relationship"
        android:layout_alignLeft="@+id/textView_adapterPerson_relationship"
        android:layout_alignStart="@+id/textView_adapterPerson_relationship"
        android:textColor="#000000" />
</RelativeLayout>